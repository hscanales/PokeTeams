<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.team_editor"
    android:orientation="vertical"

    >

    <EditText
        android:id="@+id/team_editor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/team_name"
        android:text=""
        android:inputType="text" />

    <LinearLayout
        android:layout_weight="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/members_recycler"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_team_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fui_button_text_save"
        android:layout_gravity="right"></com.google.android.material.button.MaterialButton>


</LinearLayout>